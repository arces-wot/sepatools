<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
          <PatternLayout pattern="%date (%F:%L) %highlight{%style{[%-5level]}{bright}}{FATAL=magenta, ERROR=red, WARN=blue, INFO=black, DEBUG=white, TRACE=yellow} %highlight{%msg%n%throwable}{FATAL=magenta, ERROR=red, WARN=blue, INFO=black, DEBUG=white, TRACE=yellow}"/>
          <!--PatternLayout pattern="%highlight{%date %style{[%-5level]}{bright}}{FATAL=magenta, ERROR=red, WARN=blue, INFO=black, DEBUG=white, TRACE=yellow} %highlight{(%F:%L) %msg%n%throwable}{FATAL=magenta, ERROR=red, WARN=blue, INFO=black, DEBUG=white, TRACE=yellow}"/-->
        </Console>       
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
           <!--   
           	<AppenderRef ref="MyFile"/>
           -->
        </Root>
    </Loggers>
</Configuration>